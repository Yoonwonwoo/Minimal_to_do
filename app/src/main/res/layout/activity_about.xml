<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".AboutActivity">

	<ImageView
		android:id="@+id/aboutImage"
		android:layout_width="100dp"
		android:layout_height="100dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginTop="100dp"
		android:background="#ffff00" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Minimal"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf=""
		android:textSize="25sp"
		app:layout_constraintTop_toBottomOf="@+id/aboutImage"
		android:id="@+id/minimal"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Version: 0.1"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/minimal"
		android:layout_margin="15dp"
		android:id="@+id/version"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Made by Yoonwoo"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/version"
		android:textSize="20sp"
		android:layout_marginTop="15dp"
		android:id="@+id/madeby"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="You can contect me at"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/madeby"
		android:textSize="15sp"
		android:id="@+id/contect"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:inputType="textEmailAddress"
		android:text="dora0303@naver.com"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/contect"
		android:textSize="15sp"/>

</android.support.constraint.ConstraintLayout>